<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="6dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/action_shadow"
                        android:endColor="@color/action_shadow_dark"
                        android:angle="90" />
                    <corners android:radius="18dp"/>
                </shape>
            </item>
            <item android:bottom="6dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_bright"
                        android:centerColor="@color/accent_pink"
                        android:endColor="@color/primary_gradient_end"
                        android:angle="135" />
                    <corners android:radius="18dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="12dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/action_shadow"
                        android:endColor="@color/action_shadow_dark"
                        android:angle="90" />
                    <corners android:radius="18dp"/>
                </shape>
            </item>
            <item android:bottom="12dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/primary_bright"
                        android:centerColor="@color/accent_pink"
                        android:endColor="@color/primary_gradient_end"
                        android:angle="135" />
                    <corners android:radius="18dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>

