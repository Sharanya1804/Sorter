<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/secondary_shadow"
                        android:endColor="@color/secondary_shadow_dark"
                        android:angle="90" />
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/secondary_gradient_start"
                        android:endColor="@color/secondary_gradient_end"
                        android:angle="45" />
                    <corners android:radius="16dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="8dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/secondary_shadow"
                        android:endColor="@color/secondary_shadow_dark"
                        android:angle="90" />
                    <corners android:radius="16dp"/>
                </shape>
            </item>
            <item android:bottom="8dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/secondary_gradient_start"
                        android:endColor="@color/secondary_gradient_end"
                        android:angle="45" />
                    <corners android:radius="16dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>

